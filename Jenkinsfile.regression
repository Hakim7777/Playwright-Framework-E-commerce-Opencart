 */

pipeline {
    agent any
    
    // NOTE: Si NodeJS plugin n'est pas installÃ©, le Node.js du systÃ¨me sera utilisÃ©
    
    environment {
        CI = 'true'
        PATH = "C:\\Program Files\\nodejs;${PATH}"  // Adjust based on your Node.js installation
    }
    
    parameters {
        choice(
            name: 'TEST_SUITE',
            choices: ['sanity', 'regression', 'all'],
            description: 'Select test suite to run'
        )
    }
    
    stages {
        stage('ğŸ“¥ Checkout') {
            steps {
                echo "ï¿½ Cloning repository..."
                checkout scm
            }
        }
        
        stage('âœ… Verify Environment') {
            steps {
                echo "ï¿½ Verifying environment..."
                bat '''
                    echo Node.js version:
                    node --version
                    echo.
                    echo npm version:
                    npm --version
                '''
            }
        }
        
        stage('ğŸ“¦ Setup') {
            steps {
                echo "ğŸ“¦ Installing dependencies..."
                bat 'npm ci'
                bat "npx playwright install chromium"
            }
        }
        
        stage('ğŸ§ª Execute Tests') {
            steps {
                script {
                    echo "ğŸ§ª Running ${params.TEST_SUITE} tests..."
                    
                    try {
                        if (params.TEST_SUITE == 'sanity') {
                            bat "npx playwright test --grep @sanity"
                        } else if (params.TEST_SUITE == 'regression') {
                            bat "npx playwright test --grep @regression"
                        } else {
                            bat "npx playwright test"
                        }
                    } catch (Exception e) {
                        echo "âš ï¸ Tests failed, continuing to generate reports..."
                    }
                }
            }
        }
        
        stage('ğŸ“Š Generate Reports') {
            steps {
                echo "ğŸ“Š Generating Allure report..."
                script {
                    try {
                        bat 'npm run allure:generate'
                    } catch (Exception e) {
                        echo "âš ï¸ Allure generation skipped"
                    }
                }
            }
        }
    }
    
    post {
        always {
            echo 'ğŸ“Š Archiving test artifacts...'
            
            archiveArtifacts artifacts: 'playwright-report/**/*', allowEmptyArchive: true
            archiveArtifacts artifacts: 'allure-report/**/*', allowEmptyArchive: true
            archiveArtifacts artifacts: 'test-results/**/*', allowEmptyArchive: true
            
            echo 'âœ… Build artifacts archived successfully!'
        }
        
        success {
            echo "âœ… ${params.TEST_SUITE} tests passed! ğŸ‰"
        }
        
        failure {
            echo "âŒ ${params.TEST_SUITE} tests failed!"
        }
    }
}
